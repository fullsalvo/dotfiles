! Fonts
URxvt.font:xft:hlv:pixelsize=7:antialias=True,xft:JackeyFont:pixelsize=7:antialias=True
URxvt.boldFont:
XTerm.font:xft:hlv:pixelsize=7:antialias=True,xft:JackeyFont:pixelsize=7:antialias=True
XTerm.boldFont:

! General
*.scrollBar: false
*.saveLines: 8192
*.internalBorder: 10
*.cursorUnderline: true
*.cursorBlink: true
*.dynamicColors:on
*.letterSpace: -3

Xft.autohint: 0
Xft.dpi: 96
Xft.hintstyle: hintnone
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

! Separate settings for emacs
emacs.internalBorder: 0

! Rofi
rofi.opacity: 100
rofi.width: 40
rofi.lines: 3
rofi.font: hlv 8
rofi.padding: 50
rofi.bw: 5
rofi.terminal: urxvt
rofi.disable-history: true
rofi.color-window: #171f1c, #538d82
rofi.color-normal: #171f1c, #d2d2d2, #171f1c, #538d82, #171f1c
rofi.color-active: #171f1c, #d2d2d2, #171f1c, #6ab4a6, #171f1c
rofi.color-urgent: #171f1c, #d2d2d2, #171f1c, #634d41, #171f1c

! Clickable Links
*perl-ext-common:	 default,matcher,clipboard
*keysym.Shift-Control-V: perl:clipboard:paste
*urlLauncher:		 firefox
*matcher.button:	 1
*url-select.underline:	 true

