! Fonts
URxvt.font:      xft:bitbuntu:pixelsize=8:antialias=true,xft:JackeyFont:pixelsize=8:antialias=true,
URxvt.boldFont:
XTerm.font:      xft:bitbuntu:pixelsize=8:antialias=true,xft:JackeyFont:pixelsize=8:antialias=true,
XTerm.boldFont:

! General
*.scrollBar: false
*.saveLines: 8192
*.internalBorder: 10
*.cursorUnderline: true
*.cursorBlink: true
*.dynamicColors:on
*.letterSpace: 1

Xft.autohint: 0
Xft.dpi: 96
Xft.hintstyle: hintnone
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

! Separate settings for emacs
emacs.internalBorder: 0

! Rofi
rofi.opacity: 80
rofi.width: 40
rofi.lines: 3
rofi.font: bitbuntu 8
rofi.padding: 50
rofi.bw: 2
rofi.terminal: urxvt
rofi.disable-history: true
rofi.color-window: #222222, #b9bda9
rofi.color-normal: #222222, #eeeeee, #222222, #93a0aa, #222222
rofi.color-active: #222222, #eeeeee, #222222, #becfdc, #222222
rofi.color-urgent: #222222, #eeeeee, #222222, #cbcbc1, #222222

! Clickable Links
*perl-ext-common:	 default,matcher,clipboard
*keysym.Shift-Control-V: perl:clipboard:paste
*urlLauncher:		 firefox
*matcher.button:	 1
*url-select.underline:	 true

