! Fonts
URxvt.font:xft:Lemon:pixelsize=8:antialias=False,xft:Kochi Gothic:pixelsize=8:antialias=False
URxvt.boldFont:
XTerm.font:xft:Lemon:pixelsize=8:antialias=False,xft:Kochi Gothic:pixelsize=8:antialias=False
XTerm.boldFont:

! General
*.scrollBar: false
*.saveLines: 8192
*.internalBorder: 10
*.cursorUnderline: true
*.cursorBlink: true
*.dynamicColors:on
*.letterSpace: 1

Xft.autohint: 0
Xft.dpi: 96
Xft.hintstyle: hintnone
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

! Separate settings for emacs
emacs.internalBorder: 0

! Rofi
rofi.opacity: 100
rofi.width: 40
rofi.lines: 3
rofi.font: Lemon 8
rofi.padding: 50
rofi.bw: 1
rofi.terminal: urxvt
rofi.disable-history: true
rofi.color-window: #353945, #63decd
rofi.color-normal: #353945, #becde7, #353945, #63decd, #353945
rofi.color-active: #353945, #becde7, #353945, #90ded3, #353945
rofi.color-urgent: #353945, #becde7, #353945, #4591e7, #353945

! Clickable Links
*perl-ext-common:	 default,matcher,clipboard
*keysym.Shift-Control-V: perl:clipboard:paste
*url-launcher:		 /usr/bin/firefox
*matcher.button:	 1
*url-select.underline:	 true
*.matcher.rend.0:        Uline Bold fg4

