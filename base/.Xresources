! Fonts
URxvt.font:xft:Fira Mono:pixelsize=11:antialias=True,xft:Noto Sans Mono CJK JP:pixelsize=11:antialias=True,xft:Noto Sans Mono CJK KR:pixelsize=11:antialias=True
URxvt.boldFont:
XTerm.font:xft:Fira Mono:pixelsize=11:antialias=True,xft:Noto Sans Mono CJK JP:pixelsize=11:antialias=True,xft:Noto Sans Mono CJK KR:pixelsize=11:antialias=True
XTerm.boldFont:

! General
*.scrollBar: false
*.saveLines: 8192
*.internalBorder: 10
*.cursorUnderline: true
*.cursorBlink: true
*.dynamicColors:on
*.letterSpace: -1

Xft.autohint: 0
Xft.dpi: 96
Xft.hintstyle: hintnone
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

! Rofi
rofi.opacity: 100
rofi.width: 40
rofi.lines: 3
rofi.font: Fira Mono 9
rofi.padding: 50
rofi.bw: 5
rofi.terminal: urxvt
rofi.color-window: #1c1c22, #708ca2
rofi.color-normal: #1c1c22, #bcbcbc, #1c1c22, #708ca2, #1c1c22
rofi.color-active: #1c1c22, #bcbcbc, #1c1c22, #7faed0, #1c1c22
rofi.color-urgent: #1c1c22, #bcbcbc, #1c1c22, #a7a59c, #1c1c22

! Clickable Links
*perl-ext-common:	 default,matcher,clipboard
*keysym.Shift-Control-V: perl:clipboard:paste
*url-launcher:		 /usr/bin/vivaldi-stable
*matcher.button:	 1
*url-select.underline:	 true
*.matcher.rend.0:        Uline Bold fg4

! Extra

*.color254:     #1c1c22
*.color255:     #bcbcbc

