nnoremap j 10j
nnoremap k 10k
inoremap <C-a> <Insert><C-a><Insert>
cnoremap <S-Insert> <C-v>
inoremap <S-Insert> <C-v>
nnoremap t t<CR>
nnoremap T t
set hintchars=asdfhjkl

highlight ContentSeparator border: none;
highlight CmdLine background: #353945; color: #becde7;
highlight StatusLine background: #353945; color: #becde7; font-family: Lemon;
highlight Normal background: #353945; color: #becde7;
highlight ModeMsg background: #63decd; color: #becde7; font-family: Lemon;
highlight CmdLine>* font-family: "Lemon";
highlight Hint font-family: "Lemon"; background: #becde7; color: #353945;
highlight HintActive background-color: #e64c4c;
highlight HintElem background-color: #c2f139;
highlight InfoMsg background-color: #353945; color: #e64c4c; font-family: "Lemon";

iunmap <C-q>
nnoremap <C-q> :js toggle_bottombar()<CR>

:js << EOF
function toggle_bottombar(p) {
	 var bb = document.getElementById('liberator-bottombar');
	 if (!bb)
		 return;
	if (p == 'on'){
		bb.style.height = '';
		bb.style.overflow = '';
		return;
	}
	if (p == 'off'){
		bb.style.height = '0px';
		bb.style.overflow = 'hidden';
		return;
	  }

	 bb.style.height = (bb.style.height == '') ? '0px' : '';
	 bb.style.overflow = (bb.style.height == '') ? '' : 'hidden';
}
toggle_bottombar();
EOF