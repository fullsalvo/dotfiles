inoremap <C-v> <C-v><C-v>
inoremap <S-Insert> <C-v><C-v>
inoremap <C-x> <C-v><C-x>
nnoremap t t<CR>
set hintchars=asdfhjkl

highlight ContentSeparator border: none;
highlight CmdLine background: #1c1c22; color: #bcbcbc;
highlight StatusLine background: #1c1c22; color: #bcbcbc; font-family: hlv;
highlight Normal background: #1c1c22;
highlight ModeMsg background: #708ca2; color: #bcbcbc; font-family: hlv;
highlight CmdLine>* font-family: "hlv";
highlight Hint font-family: "hlv"; background: #bcbcbc; color: #1c1c22;
highlight HintActive background-color: #7e6565;
highlight HintElem backgroud-color: #90a996;

iunmap <C-q>
nnoremap <C-q> :js toggle_bottombar()<CR>

:js << EOF
function toggle_bottombar(p) {
	 var bb = document.getElementById('liberator-bottombar');
	 if (!bb)
		 return;
	if (p == 'on'){
		bb.style.height = '';
		bb.style.overflow = '';
		return;
	}
	if (p == 'off'){
		bb.style.height = '0px';
		bb.style.overflow = 'hidden';
		return;
	  }

	 bb.style.height = (bb.style.height == '') ? '0px' : '';
	 bb.style.overflow = (bb.style.height == '') ? '' : 'hidden';
}
toggle_bottombar();
EOF