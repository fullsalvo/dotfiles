nnoremap j 10j
nnoremap k 10k
inoremap <C-a> <Insert><C-a><Insert>
cnoremap <S-Insert> <C-v>
inoremap <S-Insert> <C-v>
nnoremap t t<CR>
nnoremap T t
set hintchars=asdfhjkl

highlight ContentSeparator border: none;
highlight CmdLine background: #0f1f24; color: #92a19a;
highlight StatusLine background: #0f1f24; color: #92a19a; font-family: Fira Mono;
highlight Normal background: #0f1f24; color: #92a19a;
highlight ModeMsg background: #7e95f0; color: #92a19a; font-family: Fira Mono;
highlight CmdLine>* font-family: "Fira Mono";
highlight Hint font-family: "Fira Mono"; background: #92a19a; color: #0f1f24;
highlight HintActive background-color: #ac8a8a;
highlight HintElem background-color: #bfd491;
highlight InfoMsg background-color: #0f1f24; color: #ac8a8a; font-family: "Fira Mono";

iunmap <C-q>
nnoremap <C-q> :js toggle_bottombar()<CR>

:js << EOF
function toggle_bottombar(p) {
	 var bb = document.getElementById('liberator-bottombar');
	 if (!bb)
		 return;
	if (p == 'on'){
		bb.style.height = '';
		bb.style.overflow = '';
		return;
	}
	if (p == 'off'){
		bb.style.height = '0px';
		bb.style.overflow = 'hidden';
		return;
	  }

	 bb.style.height = (bb.style.height == '') ? '0px' : '';
	 bb.style.overflow = (bb.style.height == '') ? '' : 'hidden';
}
toggle_bottombar();
EOF