nnoremap j 10j
nnoremap k 10k
inoremap <C-a> <Insert><C-a><Insert>
cnoremap <S-Insert> <C-v>
inoremap <S-Insert> <C-v>
nnoremap t t<CR>
nnoremap T t
set hintchars=asdfhjkl

highlight ContentSeparator border: none;
highlight CmdLine background: #271e1f; color: #bbafbe;
highlight StatusLine background: #271e1f; color: #bbafbe; font-family: Fira Mono;
highlight Normal background: #271e1f; color: #bbafbe;
highlight ModeMsg background: #8a7e8f; color: #bbafbe; font-family: Fira Mono;
highlight CmdLine>* font-family: "Fira Mono";
highlight Hint font-family: "Fira Mono"; background: #bbafbe; color: #271e1f;
highlight HintActive background-color: #af6a82;
highlight HintElem background-color: #e1cd8a;
highlight InfoMsg background-color: #271e1f; color: #af6a82; font-family: "Fira Mono";

iunmap <C-q>
nnoremap <C-q> :js toggle_bottombar()<CR>

:js << EOF
function toggle_bottombar(p) {
	 var bb = document.getElementById('liberator-bottombar');
	 if (!bb)
		 return;
	if (p == 'on'){
		bb.style.height = '';
		bb.style.overflow = '';
		return;
	}
	if (p == 'off'){
		bb.style.height = '0px';
		bb.style.overflow = 'hidden';
		return;
	  }

	 bb.style.height = (bb.style.height == '') ? '0px' : '';
	 bb.style.overflow = (bb.style.height == '') ? '' : 'hidden';
}
toggle_bottombar();
EOF