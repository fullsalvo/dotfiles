nnoremap j 10j
nnoremap k 10k
inoremap <C-a> <Insert><C-a><Insert>
cnoremap <S-Insert> <C-v>
inoremap <S-Insert> <C-v>
nnoremap t t<CR>
nnoremap T t
set hintchars=asdfhjkl

highlight ContentSeparator border: none;
highlight CmdLine background: #1c1c22; color: #bcbcbc;
highlight StatusLine background: #1c1c22; color: #bcbcbc; font-family: Fira Mono;
highlight Normal background: #1c1c22; color: #bcbcbc;
highlight ModeMsg background: #708ca2; color: #bcbcbc; font-family: Fira Mono;
highlight CmdLine>* font-family: "Fira Mono";
highlight Hint font-family: "Fira Mono"; background: #bcbcbc; color: #1c1c22;
highlight HintActive background-color: #7e6565;
highlight HintElem background-color: #90a996;
highlight InfoMsg background-color: #1c1c22; color: #7e6565; font-family: "Fira Mono";

iunmap <C-q>
nnoremap <C-q> :js toggle_bottombar()<CR>

:js << EOF
function toggle_bottombar(p) {
	 var bb = document.getElementById('liberator-bottombar');
	 if (!bb)
		 return;
	if (p == 'on'){
		bb.style.height = '';
		bb.style.overflow = '';
		return;
	}
	if (p == 'off'){
		bb.style.height = '0px';
		bb.style.overflow = 'hidden';
		return;
	  }

	 bb.style.height = (bb.style.height == '') ? '0px' : '';
	 bb.style.overflow = (bb.style.height == '') ? '' : 'hidden';
}
toggle_bottombar();
EOF